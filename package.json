{
  "name": "undo-tree",
  "displayName": "Undo Tree",
  "description": "Undo Tree like that in Vim or Emacs!!",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.undo",
    "onCommand:extension.redo",
    "onCommand:extension.saveAndAdvance",
    "onCommand:extension.toggleTimecode"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
        "explorer": [
            {
                "id": "undoTreeView",
                "name": "Undo Tree"
            }
        ]
    },
    "commands": [
        {
            "command": "extension.undo",
            "title": "Undo Tree: Undo"
        },
        {
            "command": "extension.redo",
            "title": "Undo Tree: Redo"
        },
        {
            "command": "extension.resetTree",
            "title": "Undo Tree: Reset"
        },
        {
            "command": "extension.saveAndAdvance",
            "title": "Undo Tree: Save and Advance"
        },
        {
            "command": "extension.toggleTimecode",
            "title": "Undo Tree: Toggle Showing Timecode"
        }
    ],
    "keybindings": [
        {
            "command": "extension.undo",
            "key": "ctrl+alt+z",
            "when": "editorTextFocus"
        },
        {
            "command": "extension.redo",
            "key": "ctrl+alt+y",
            "when": "editorTextFocus"
        },
        {
            "command": "extension.saveAndAdvance",
            "key": "ctrl+y",
            "when": "editorTextFocus"
        }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
